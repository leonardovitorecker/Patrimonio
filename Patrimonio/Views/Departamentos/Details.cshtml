@model Patrimonio.Models.DtoDepartamento

@{
     Layout = "_LayoutDepartamento";
    ViewData["Departamentos"] = "Details";
}

<h1>Detalhes</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomedepartamento)
        </dd>
        <dt class = "col-sm-2">
          Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricaodepartamento)
        </dd>
        <dt class = "col-sm-2">
           Local
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomelocal)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id"> <input type="submit" value="Editar" class="btn btn-primary " /></a> |
    <a asp-action="Index"> 
        <input type="submit" value="Voltar para lista" class="btn btn-primary" ></a>
</div>
