@model Patrimonio.Models.DbDepartamento

@{
     Layout = "_LayoutDepartamento";
    ViewData["Departamentos"] = "Edit";
}

<h1>Editar</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
               
                <input asp-for="nomedepartamento" class="form-control"  placeholder="Digite a nome " />
                <span asp-validation-for="nomedepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
             
                <input asp-for="descricaodepartamento" class="form-control" placeholder="Digite a descrição"  />
                <span asp-validation-for="descricaodepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
              
                <input asp-for="idlocal" class="form-control"  placeholder="Digite o local" />
                <span asp-validation-for="idlocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> <input type="submit" value="Voltar para a lista" class="btn btn-primary " /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
