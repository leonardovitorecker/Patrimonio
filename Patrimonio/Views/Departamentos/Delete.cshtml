@model Patrimonio.Models.DtoDepartamento

@{
     Layout = "_LayoutDepartamento";
    ViewData["Departamentos"] = "Delete";
}

<h1>Deletar</h1>

<h3>voce realmente deseja apagar?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomedepartamento)
        </dd>
        <dt class = "col-sm-2">
          Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricaodepartamento)
        </dd>
        <dt class = "col-sm-2">
           Local
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomelocal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
      
    </form>
    <div>
    <a asp-action="Index"> <input type="submit" value="Volta pra a lista" class="btn btn-primary " ></a>
</div>
</div>
