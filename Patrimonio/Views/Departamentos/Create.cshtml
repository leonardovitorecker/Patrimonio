@model Patrimonio.Models.DbDepartamento

@{
     Layout = "_LayoutDepartamento";
    ViewData["Departamentos"] = "Create";
}
<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  

<h1>Cadastrar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="nomedepartamento" class="form-control" placeholder="Digite o nome"  />
                <span asp-validation-for="nomedepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="descricaodepartamento" class="form-control"  placeholder="Digite a descrição"  />
                <span asp-validation-for="descricaodepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select  asp-items=@ViewBag.local2 nome="nomelocal" asp-for="idlocal" class="form-control" placeholder="Selecione o local"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> <input type="submit" value="Voltar para a lista" class="btn btn-primary"></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
