@model IEnumerable<Patrimonio.Models.DtoPatrimonio>


@{
     Layout = "_LayoutPatrimonio";
    ViewData["Patrimonios"] = "Index";
}

<h1>Lista de patrimonios</h1>

<p>
    <a asp-action="Create"><input type="submit" value="Criar um novo" class="btn btn-primary " ></a>
</p>
<table class="table">
    <thead>
        <tr>
          
            <th>
             Nome do patrimonio
            </th>
            <th>
              Descricao do patrimonio
            </th>
            <th>
                Valor do patrimonio
            </th>
            <th>
               Categoria
            </th>
            <th>
               Local
            </th>
          
            <th>
                Fornecedor
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.nomepatrimonio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricaopatrimonio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorpatrimonio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomecategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomelocal)
            </td>
     
            <td>
                @Html.DisplayFor(modelItem => item.nomefornecedor)
            </td>
         <td>
                
                <a asp-action="Edit" asp-route-id="@item.id">
                    <input type="submit" value="Editar" class="btn btn-primary " ></a> 
                <a asp-action="Details" asp-route-id="@item.id"> <input type="submit" value="Detalhes" class="btn btn-primary " ></a> 
                <a asp-action="Delete" asp-route-id="@item.id"> <input type="submit" value="Deletar" class="btn btn-primary " ></a>
            </td>
        </tr>
}
    </tbody>
</table>
