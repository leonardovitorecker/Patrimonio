@model Patrimonio.Models.DbCategoria



@{
    Layout = "_layoutCategoria";
    ViewData["Categorias"] = "Edit";
}

<h1>Editar</h1>

<h4>DbCategoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                
                <input asp-for="descricaocategoria" class="form-control"  placeholder="Digite a descrição" />
                <span asp-validation-for="descricaocategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> <input type="submit" value="Voltar para lista" class="btn btn-primary " /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
