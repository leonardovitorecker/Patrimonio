@model Patrimonio.Models.DbUsuario

@{
     Layout = "_LayoutUsuario";

    ViewData["Usuario"] = "Delete";
}

<h1>Deletar</h1>

<h3>Voce deseja mesmo deletar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.login)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.login)
