@model IEnumerable<Patrimonio.Models.DbUsuario>

@{
      Layout = "_LayoutUsuario";

    ViewData["Usuario"] = "Index";

}

<h1>lista de usuarios</h1>

<p>
    <a asp-action="Create"> <input type="submit" value="Criar um novo" class="btn btn-primary " /></a>
</p>
@using (Html.BeginForm())
{
    <text>nome</text>@Html.DropDownList("nome", new SelectList(ViewBag.nome))
    <text>login</text>@Html.DropDownList("login", new SelectList(ViewBag.login))
  <text>senha</text>@Html.DropDownList("senha", new SelectList(ViewBag.senha))
}
  <input type="submit" value"Procurar" />
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.senha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.senha)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id"> 
                    <input type="submit" value="Editar" class="btn btn-primary"  /></a> 
                <a asp-action="Details" asp-route-id="@item.id">
                 <input type="submit" value="Detalhes" class="btn btn-primary" /> </a> 
                <a asp-action="Delete" asp-route-id="@item.id">
                    <input type="submit" value="Deletar" class="btn btn-primary" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
