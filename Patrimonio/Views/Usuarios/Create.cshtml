@model Patrimonio.Models.DbUsuario

@{
     Layout = "_LayoutUsuario";
    ViewData["Usuario"] = "Create";
}


<hr />

        <form asp-action="Create">
             <div class="row justify-content-center" style="color:darkred">
            <div class="col-5">
                <div class="card" style="border-color:darkolivegreen">
            <div class="card-header text-center">
                <h2>Cadastro de Usuario</h2>
             </div>
                <div class="card-body md-3" style="border-color:darkgoldenrod">
                <input asp-for="nome" class="form-control" placeholder="Digite o nome"  />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="card-body md-3" style="border-color:darkgoldenrod">
            
                <input asp-for="login" class="form-control"  placeholder="Digite o login"  />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="card-body md-3" style="border-color:darkgoldenrod">
             
                <input asp-for="senha" class="form-control"  placeholder="Digite a senha" />
                <span asp-validation-for="senha" class="text-danger"></span>
            </div>
          <div class="card-body md-3" style="border-color:darkgoldenrod">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
                   
            
          </div>
        </div>
    </div>
        </form>

         <div>
    <a asp-action="Index"> <input type="submit" value="Ir para lista" class="btn btn-primary" ></a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
